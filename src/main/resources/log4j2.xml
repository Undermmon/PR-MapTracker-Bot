<Configuration status="info">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss} %-5level [%t] %C - %msg%n" />
		</Console>
		<File name="MyFile" fileName="logs">
			<PatternLayout pattern="%d{HH:mm:ss} %-5level [%t] %C - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="MyFile" />
		</Root>
	</Loggers>
</Configuration>